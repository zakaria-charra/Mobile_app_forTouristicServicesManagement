<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FCFFFF"
    tools:context=".HomeTouriste"
    tools:openDrawer="start">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBFBFF"
        android:layout_gravity="start"
        android:theme="@style/navTheme"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/menu_app"
        />
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FCFFFF"
        android:padding="12dp">

        <ImageView
            android:id="@+id/icon_menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/menu" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Essaouira, Morocco"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:textSize="16dp"
             android:fontFamily="@font/bangers"/>
    </RelativeLayout>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textSize="27dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-black"
            />

         <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
             android:id="@+id/cardRes"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="130dp"
            android:background="@drawable/back7"
            card_view:cardCornerRadius="17dp"
            card_view:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgresto">

                <TextView
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ou manger?"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    card_view:fontFamily="@font/bowlby_one_sc"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"

                    />
            </RelativeLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
             android:id="@+id/cardHotel"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="130dp"
            android:background="@drawable/back7"
            card_view:cardCornerRadius="17dp"
            card_view:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bghotel">

                <TextView
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:text="Ou Dormir?"
                    android:textColor="#3C3939"
                    android:textSize="30sp"
                    card_view:fontFamily="@font/bowlby_one_sc" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardDest"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="130dp"
            card_view:cardCornerRadius="17dp"
            card_view:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgdest">
            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Que voir?"
                android:textColor="#3C3939"
                android:textSize="30sp"
                card_view:fontFamily="@font/bowlby_one_sc" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardTra"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="130dp"
        android:background="@drawable/back7"
        card_view:cardCornerRadius="17dp"
        card_view:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgtradition">

            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Produits"
                android:textColor="#3C3939"
                android:textSize="30sp"
                card_view:fontFamily="@font/bowlby_one_sc" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardAct"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="130dp"
            android:background="@drawable/back7"
            card_view:cardCornerRadius="17dp"
            card_view:cardElevation="10dp">
            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Que Faire?"
                android:textColor="#3C3939"
                android:textSize="30sp"
                card_view:fontFamily="@font/bowlby_one_sc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgavtivit">


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
 </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>