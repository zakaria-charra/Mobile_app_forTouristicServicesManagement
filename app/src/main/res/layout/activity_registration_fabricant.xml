<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtradition"
    tools:context=".RegistrationFabricant">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="25dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CrÃ©er votre compte et publier votre produits"
            android:textColor="#F0353232"
            android:textSize="30sp"
            android:textColorHighlight="#00355AB8"
            android:textColorHint="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="4dp"
            app:fontFamily="@font/bowlby_one_sc"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:hint="Creer votre ID">
            <EditText
                android:id="@+id/UserIdF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:hint="Nom">
            <EditText
                android:id="@+id/nomF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:hint="Prenom">
            <EditText
                android:id="@+id/prenomF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:hint="Email">
        <EditText
            android:id="@+id/emailF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stylechamp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:hint="Password">
            <EditText
                android:id="@+id/passF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:hint="Confirmer votre Password">
            <EditText
                android:id="@+id/CpassF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:hint="Adresse">
        <EditText
            android:id="@+id/AdressF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stylechamp"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:hint="Tele">
            <EditText
                android:id="@+id/TeleF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stylechamp"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignBtnF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/style_button"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:text="Enregistrer"
            android:textColor="#0E0D0D" />

    </LinearLayout>
</ScrollView>